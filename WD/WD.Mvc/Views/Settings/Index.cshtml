@model WD.Mvc.Models.UserSettingsViewModel
@{
    ViewData["Title"] = "Configuración de Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var continentes = ViewBag.Continentes as List<string> ?? new List<string>();
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-4">
    <h2>Configuración</h2>

    @if (TempData["SettingsMessage"] != null) { <div class="alert alert-success">@Html.Raw(TempData["SettingsMessage"]!)</div> }
    @if (TempData["SettingsError"] != null)   { <div class="alert alert-warning">@Html.Raw(TempData["SettingsError"]!)</div> }

    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Perfil</h5>
                    <form asp-action="UpdateProfile" asp-controller="Settings" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Continente</label>
                            <select asp-for="Continente" class="form-select">
                                <option value="">-- Seleccione --</option>
                                @foreach (var c in continentes)
                                {
                                    <option value="@c" selected="@(Model.Continente == c)">@c</option>
                                }
                            </select>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Unidad de temperatura</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="UnidadTemperatura" id="unidadC" value="C" checked="@(Model.UnidadTemperatura == "C")" />
                                    <label class="form-check-label" for="unidadC">Celsius (C)</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="UnidadTemperatura" id="unidadF" value="F" checked="@(Model.UnidadTemperatura == "F")" />
                                    <label class="form-check-label" for="unidadF">Fahrenheit (F)</label>
                                </div>
                            </div>
                            <small class="text-muted">Nota: aplicaremos esta preferencia en la API en un paso siguiente.</small>
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                    </form>

                    <hr />

                    <h5 class="card-title mt-3">Privacidad del Top 3</h5>
                    <form asp-action="UpdateTopPublico" asp-controller="Settings" method="post" class="mt-2">
                        @Html.AntiForgeryToken()
                        <div class="form-check form-switch">
                            <input asp-for="TopFavoritosPublico" class="form-check-input" />
                            <label class="form-check-label" for="TopFavoritosPublico">Hacer público mi Top 3</label>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm mt-2">Guardar</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card mb-4 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Cambiar contraseña</h5>
                    <form asp-action="ChangePassword" asp-controller="Settings" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label class="form-label">Contraseña actual</label>
                            <input asp-for="PasswordActual" type="password" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Nueva contraseña</label>
                            <input asp-for="PasswordNuevo" type="password" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Confirmar nueva contraseña</label>
                            <input asp-for="PasswordConfirmacion" type="password" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-warning">Actualizar contraseña</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>