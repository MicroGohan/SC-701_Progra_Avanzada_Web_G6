<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Define la codificacion de caracteres -->
    <meta charset="utf-8" />
    <!-- Define el viewport para diseño responsivo -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Define el titulo dinamico de la pagina -->
    <title>@ViewData["Title"] - Weather_G6</title>
    <!-- Estilos de Bootstrap para diseño y componentes -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <!-- Estilos personalizados del sitio -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <!-- Estilos especificos del proyecto WD.Mvc -->
    <link rel="stylesheet" href="~/WD.Mvc.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <!-- Barra de navegacion principal -->
        <nav class="navbar navbar-expand-sm box-shadow mb-3" style="background: rgba(255, 255, 255, 0.40);">
            <div class="container-fluid">
                <!-- Marca o logo que enlaza a la pagina principal -->
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Weather Dashboard</a>

                <!-- Boton para colapsar el menu en pantallas pequeñas -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarRight" aria-controls="navbarRight"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Contenido colapsable del menu a la derecha -->
                <div class="collapse navbar-collapse justify-content-end text-white" id="navbarRight">
                    @{
                        // Obtiene el nombre del usuario almacenado en sesion
                        var usuarioNombre = Context.Session.GetString("UsuarioNombre");
                    }
                    <ul class="navbar-nav mb-2 mb-lg-0 text-white">
                        <!-- Si hay un usuario logueado, muestra bienvenida y opcion de cerrar sesion -->
                        @if (!string.IsNullOrEmpty(usuarioNombre))
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark text-white">Bienvenido, @usuarioNombre</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Settings" asp-action="Index">Configuración</a>
                            </li>
                            <li class="nav-item">
                                <!-- Enlace para cerrar sesion que ejecuta un form oculto -->
                                <a href="#" class="nav-link text-dark text-white" onclick="event.preventDefault(); document.getElementById('logout-form').submit();">Cerrar sesion</a>
                                <form id="logout-form" asp-controller="Usuarios" asp-action="Logout" method="post" style="display:none;"></form>
                            </li>
                            <!-- Enlace a la pagina de favoritos -->
                            <li class="nav-item">
                                <a class="nav-link text-dark text-white" asp-area="" asp-controller="Favorites" asp-action="Index">Mis Favoritos</a>
                            </li>
                        }
                        else
                        {
                            <!-- Si no hay usuario logueado, muestra opciones para registrarse y login -->
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="SignUp">Registrarse</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Usuarios" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Contenedor principal del contenido -->
    <div class="container">
        <main role="main" class="flex-grow-1 pb-3">
            <!-- Aqui se renderiza el contenido de la vista activa -->
            @RenderBody()
        </main>
    </div>

    <!-- Pie de pagina -->
    <footer class="text-white py-3" style="background: rgba(255, 255, 255, 0.40);">
        <div class="container d-flex justify-content-between align-items-center flex-wrap small text-white">
            <span>&copy; 2025 Weather_G6 SC-701</span>
            <div class="text-end">
                <a href="https://github.com/MicroGohan/SC-701_Progra_Avanzada_Web_G6.git" class="text-black text-decoration-none me-3 text-white">GitHub</a>
                <a href="https://openweathermap.org/" class="text-black text-decoration-none text-white">Proveedores de datos</a>
            </div>
        </div>
    </footer>


    <!-- Scripts de javascript necesarios -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Renderiza seccion opcional de scripts en vistas específicas -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
